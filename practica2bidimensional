package practica2bidimensional;

/**
 *
 * @author Alondra Medina
 */
public class practica2bidimensional {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        char [][] vocales = new char [3][5];
        char vocal = 'a';
        
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 5; j++) {
                vocales [i][j] = vocal;
                vocal++;
                
            }
        }
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 5; j++) {
                System.out.print(vocales [i][j] +" ");
            }
            System.out.println();
        }
  
        
    }
    
}
